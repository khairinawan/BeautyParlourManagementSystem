﻿@{
    ViewData["Title"] = "Product Page";
}

@model IEnumerable<BeautyParlourManagementAPI.Models.Product>

<div class="container mt-4">
    <div class="card shadow-lg p-4">
        <h2 class="text-center text-primary"><i class="fas fa-shopping-bag"></i> Our Products</h2>
        <hr>

        <div class="d-flex justify-content-end mb-3">
            <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus-circle"></i>+ Add New Product</a>
        </div>

        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-dark">
                    <tr>
                        <th><i class="fas fa-tag"></i> Product Name</th>
                        <th><i class="fas fa-dollar-sign"></i> Price (RM)</th>
                        <th><i class="fas fa-info-circle"></i> Description</th>
                        <th><i class="fas fa-box"></i> Stock</th>
                        <th><i class="fas fa-cogs"></i> Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.ProductName</td>
                            <td>@product.ProductCost.ToString("0.00")</td>
                            <td>@product.ProductDescription</td>
                            <td>@product.StockQuantity</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@product.ProductID" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@product.ProductID" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>