﻿﻿@{
    ViewData["Title"] = "Appointment List";
}
@model IEnumerable<BeautyParlourManagementAPI.Models.Appointment>

<div class="container mt-4">
    <h2 class="text-center mb-4" style="color: #ff1493; font-weight: bold;">Appointments List</h2>

    <div class="d-flex justify-content-end mb-3">
        <a asp-action="Create" class="btn btn-primary">+ Add New Appointment</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered shadow">
            <thead class="bg-light text-dark">
                <tr>
                    <th>Customer Name</th>
                    <th>Appointment Date</th>
                    <th>Appointment Status</th>
                    <th>Appointment Remark</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var appointment in Model)
                {
                    <tr>
                        <td>@appointment.CustomerName</td>
                        <td>@appointment.AppointmentDate.ToString("MMMM dd, yyyy")</td>
                        <td>
                            <span class="badge
                                @(appointment.AppointmentStatus == "Confirmed" ? "bg-success" :
                                  appointment.AppointmentStatus == "Pending" ? "bg-warning" :
                                  "bg-danger")">
                                @appointment.AppointmentStatus
                            </span>
                        </td>
                        <td>@appointment.AppointmentRemark</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@appointment.AppointmentID" class="btn btn-sm btn-warning">Edit</a>
                            <a asp-action="Delete" asp-route-id="@appointment.AppointmentID" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>